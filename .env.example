SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1
FRONTEND_URL=http://localhost:5173

# Database
DB_ENGINE=django.db.backends.sqlite3
DB_NAME=db.sqlite3

# Email (for notifications)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Language
LANGUAGE_CODE=en

# Stripe Payment Configuration
STRIPE_PUBLIC_KEY=pk_test_your_public_key_here
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Twilio SMS Configuration (for 2FA)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Frontend URL
FRONTEND_URL=http://localhost:5173

# AWS S3 (File Storage - Production)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_STORAGE_BUCKET_NAME=your_bucket_name
AWS_S3_REGION_NAME=us-east-1

# Multi-Currency Support
DEFAULT_CURRENCY=USD
# African currencies: ZAR (South Africa), NGN (Nigeria), KES (Kenya), GHS (Ghana), EGP (Egypt), 
# XOF (West Africa CFA), XAF (Central Africa CFA), TZS (Tanzania), UGX (Uganda), ZMW (Zambia), 
# MWK (Malawi), RWF (Rwanda), MAD (Morocco), TND (Tunisia), AOA (Angola), BWP (Botswana), 
# MUR (Mauritius), SCR (Seychelles), SZL (Eswatini), LSL (Lesotho)
SUPPORTED_CURRENCIES=USD,EUR,GBP,ZAR,NGN,KES,GHS,EGP,XOF,XAF,TZS,UGX,ZMW,MWK,RWF,MAD,TND,AOA,BWP,MUR,SCR,SZL,LSL

# African Payment Gateways (Optional - for local payment methods)
FLUTTERWAVE_SECRET_KEY=your_flutterwave_key
FLUTTERWAVE_PUBLIC_KEY=your_flutterwave_public_key
PAYSTACK_SECRET_KEY=your_paystack_key
PAYSTACK_PUBLIC_KEY=your_paystack_public_key

# Exchange Rate API (for real-time currency conversion)
# Get free API key from: https://www.exchangerate-api.com/
EXCHANGE_RATE_API_KEY=your_exchange_rate_api_key_here
